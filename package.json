{
    "name": "enplatedmvc",
    "displayName": "Enplated MVC",
    "description": "Syntax Highlighting for Enplated MVC Framework Blades files",
    "version": "1.0.3",
    "publisher": "Karlosoft",
    "author": {
        "name": "Karel Cermak",
        "email": "info@karlosoft.com",
        "url": "https://karlosoft.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/K-cermak/Enplated-MVC-vsc-extension.git"
    },
    "homepage": "https://enplated.karlosoft.com/mvc/",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Programming Languages",
        "Language Packs",
        "Snippets"
    ],
    "keywords": [
        "blade",
        "template",
        "snippet",
        "formatter",
        "syntax",
        ".enp",
        "enplated",
        "mvc"
      ],
    "contributes": {
        "grammars": [
            {
                "language": "enplatedmvc",
                "scopeName": "source.enplatedmvc",
                "path": "./syntaxes/enplatedmvc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "enplatedmvc",
                "path": "./snippets/enplatedmvc.json"
            }
        ],
        "languages": [
            {
                "id": "enplatedmvc",
                "aliases": [
                    "Enplated MVC Blade",
                    "enplatedmvc"
                ],
                "extensions": [
                    ".enp"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "media/logo-light.svg",
                    "dark": "media/logo-dark.svg"
                }
            }
        ],
        "icons": {
            "enplatedmvc-icon": {
                "description": "Icon for Enplated MVC files",
                "default": "add",
                "light": "media/logo-light.svg",
                "dark": "media/logo-dark.svg"
            }
        }
    },
    "icon": "media/logo.png",
    "license" : "MIT"
}